---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const {
  title = 'Omnia360',
  showFooter = true,
  footerType = 'default',
  background = '/bg-omnia.png'
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <slot name="head" />
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        font-size: 120%; /* Aumenta en un 20% */
        color: #1a1a1a;
      }

      .section-blur {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
      }

      .section-white {
        background: white;
        color: #1a1a1a;
        padding: 3rem 2rem;
        max-width: 1000px;
        margin: 4rem auto;
        border-radius: 1rem;
      }

      .hero {
        padding: 5rem 2rem;
        text-align: center;
        background: linear-gradient(to right, #0a0a23, #202044);
        color: white;
      }

      .btn {
        background: #0077cc;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
      }

      h1, h2 {
        margin-bottom: 1rem;
        text-align: center;
      }

      ul {
        list-style: none;
        padding-left: 0;
        max-width: 800px;
        margin: auto;
        text-align: left;
      }

      ul li {
        margin-bottom: 1rem;
      }
    </style>
  </head>

  <body style={`background: url('${background}') no-repeat center center fixed; background-size: cover;`}>
    <Navbar />
    <slot />
    {showFooter && <Footer type={footerType} />}
  </body>
</html>
